<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	
	<groupId>easy.cloud.service</groupId>
	<artifactId>easy-cloud-service-core</artifactId>
	<version>1.0.0</version>
	<name>easy-cloud-service-core</name>
	<description>easy-cloud-service-core</description>
	<packaging>jar</packaging>
	<url>http://maven.apache.org</url>
	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>1.5.8.RELEASE</version>
		<relativePath/> <!-- lookup parent from repository -->
	</parent>
	
	<properties>
			<!--设置字符编码及java版本 -->
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<java.version>1.7</java.version>
		<skipTests>true</skipTests>
	</properties>
	<dependencies>
		<!-- spring框架相关依赖 end -->
		<dependency>
			<groupId>easy.cloud</groupId>
			<artifactId>easy-cloud-core</artifactId>
			<version>1.0.0</version>
		</dependency>
	</dependencies>
	
	<build>
		<plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <classifier>exec</classifier>
                </configuration>
            </plugin>
        </plugins>
	</build>
</project>